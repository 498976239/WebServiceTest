<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false">
        <shape android:shape="rectangle">
            <!--填充颜色，渐变颜色，angle是渐变的方向角度-->
            <gradient android:startColor="#0d11ea"
                android:endColor="#f7eaeef2"
                android:centerColor="#2d49b9"
                android:angle="450"
                />
            <corners android:radius="90dp"/>
            <stroke android:width="1dp"
                android:color="#0d11ea"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"></padding>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient android:startColor="#2eea0d"
                android:endColor="#f7eaeef2"
                android:centerColor="#60b92d"
                android:angle="450"
                />
            <corners android:radius="90dp"/>
            <stroke android:width="1dp"
                android:color="#2eea0d"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"></padding>

        </shape>
    </item>

</selector>